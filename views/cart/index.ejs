<%- include('../partials/header') %>

<!DOCTYPE html>
<html>
<head>
    <title>Cart</title>
</head>
<body>
    <h1>Your Cart</h1>

    <ul>
        <% cartItems.forEach(meal => { %>
            <li><%= meal.name %> - $<%= meal.price.toFixed(2) %></li>
        <% }) %>

        <% if (cartItems && cartItems.length > 0) { %>
            <% cartItems.forEach(meal => { %>
                <li><%= meal.name %> - $<%= meal.price.toFixed(2) %></li>
            <% }) %>
            <h2>Total: $<%= totalPrice.toFixed(2) %></h2>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
        
    </ul>

    <h2>Total: $<%= totalPrice.toFixed(2) %></h2>

</body>
</html>
